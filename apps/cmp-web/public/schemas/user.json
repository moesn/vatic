{
  "$schema": "../../node_modules/vatic/schema.json",
  "table": {
    "api": "/user/pageQueryList",
    "delete": "/user/delUser",
    "disableDelete": "account=admin",
    "disableUpdate": "account=admin",
    "title": "用户列表",
    "keyField": "id",
    "nameField": "username",
    "columns": [
      {
        "field": "seq",
        "type": "seq",
        "width": 50
      },
      {
        "title": "账号",
        "field": "account"
      },
      {
        "title": "姓名",
        "field": "username"
      },
      {
        "title": "联系电话",
        "field": "phone"
      },
      {
        "title": "所属角色",
        "field": "roles.name",
        "type": "List"
      },
      {
        "title": "用户状态",
        "field": "todo"
      },
      {
        "title": "创建时间",
        "field": "todo"
      },
      {
        "title": "更新时间",
        "field": "todo"
      }
    ],
    "search": [
      {
        "title": "用户账号",
        "field": "todo",
        "type": "Input"
      },
      {
        "title": "用户状态",
        "field": "todo",
        "type": "Select",
        "props": {
          "options": [
            {
              "label": "正常",
              "value": "1"
            },
            {
              "label": "锁定",
              "value": "2"
            }
          ]
        }
      }
    ]
  },
  "form": {
    "title": "新增&修改",
    "detail": "/user/detail/$id",
    "create": "/user/addUser",
    "update": "/user/editUser",
    "items": [
      {
        "title": "账号",
        "field": "account",
        "required": true,
        "disabled": "update"
      },
      {
        "title": "姓名",
        "field": "todo",
        "required": true,
        "disabled": "update"
      },
      {
        "title": "联系电话",
        "field": "phone",
        "rules": "phone",
        "required": true
      },
      {
        "title": "所属角色",
        "field": "roleIds",
        "required": true,
        "type": "ApiSelect",
        "api": "/role/queryList?enable=true",
        "keyField": "id",
        "props": {
          "mode": "multiple"
        },
        "disabled": "update"
      },
      {
        "title": "密码",
        "field": "password",
        "required": true,
        "type": "InputPassword",
        "defaultValue": "Ab.12321",
        "disabled": "update"
      },
      {
        "title": "确认密码",
        "field": "confirmPassword",
        "required": true,
        "type": "InputPassword",
        "defaultValue": "Ab.12321",
        "disabled": "update"
      }
    ]
  }
}
