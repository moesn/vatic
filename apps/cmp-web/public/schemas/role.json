{
  "$schema": "../../node_modules/vatic/schema.json",
  "table": {
    "api": "/role/pageQueryList",
    "delete": "/role/delRole",
    "disableDelete": "code=SUPER_ADMIN",
    "disableUpdate": "code=SUPER_ADMIN",
    "title": "角色列表",
    "keyField": "id",
    "nameField": "name",
    "columns": [
      {
        "field": "seq",
        "type": "seq",
        "width": 50
      },
      {
        "title": "角色ID",
        "field": "todo"
      },
      {
        "title": "角色名称",
        "field": "name"
      },
      {
        "title": "角色类型",
        "field": "todo"
      },
      {
        "title": "权限信息",
        "field": "todo"
      },
      {
        "title": "角色描述",
        "field": "remark"
      },
      {
        "title": "创建时间",
        "field": "createdTime",
        "format": "datetime"
      }
    ],
    "search": [
      {
        "title": "角色名称",
        "field": "name",
        "type": "Input"
      },
      {
        "title": "角色类型",
        "field": "todo",
        "type": "Select",
        "props": {
          "options": [
            {
              "label": "内置",
              "value": "1"
            },
            {
              "label": "自定义",
              "value": "2"
            }
          ]
        }
      }
    ]
  },
  "form": {
    "title": "新增角色&修改角色",
    "detail": "/role/detail/$id",
    "create": "/role/addRole",
    "update": "/role/editRole",
    "items": [
      {
        "title": "角色名称",
        "field": "name",
        "required": true
      },
      {
        "title": "角色描述",
        "field": "todo",
        "type": "Textarea"
      },
      {
        "title": "菜单权限",
        "field": "permissionIds",
        "type": "VaticTree",
        "api": "/resources/resourcesTree"
      }
    ]
  }
}
