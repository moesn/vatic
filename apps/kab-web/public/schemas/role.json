{
  "$schema": "../../node_modules/@vatic/smart/schema.json",
  "table": {
    "api": "/kab/company/pageQueryList",
    "title": "角色列表",
    "titleHelp": "角色管理",
    "nameField": "name",
    "columns": [
      {
        "type": "seq",
        "width": 50
      },
      {
        "title": "角色名称",
        "field": "name"
      },
      {
        "title": "备注",
        "field": "remark"
      },
      {
        "title": "创建时间",
        "field": "createTime"
      }
    ],
    "search": [
      {
        "title": "角色名称",
        "field": "name",
        "type": "Input"
      },
      {
        "title": "创建时间",
        "field": "createTime",
        "type": "RangePicker",
        "rangeFields": [
          "startTime",
          "endTime"
        ]
      }
    ],
    "delete": {
      "url": "/system/role/$id"
    }
  },
  "form": {
    "create": {
      "url": "/kab/company/addCompany",
      "method": "post"
    },
    "update": {
      "url": "/kab/company/editCompany",
      "method": "patch"
    },
    "items": [
      {
        "title": "角色名称",
        "field": "name"
      },
      {
        "title": "备注",
        "field": "remark"
      }
    ]
  }
}
