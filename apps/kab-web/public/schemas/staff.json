{
  "$schema": "../../node_modules/vatic/schema.json",
  "table": {
    "api": "/staff/pageQueryList",
    "title": "人员列表",
    "keyField": "id",
    "nameField": "name",
    "export": true,
    "columns": [
      {
        "type": "seq",
        "width": 50
      },
      {
        "title": "姓名",
        "field": "name"
      },
      {
        "title": "性别",
        "field": "gender"
      },
      {
        "title": "人员类型",
        "field": "typeName"
      },
      {
        "title": "身份证号",
        "field": "idNo"
      },
      {
        "title": "联系电话",
        "field": "phone"
      },
      {
        "title": "驾照类型",
        "field": "driveClass"
      },
      {
        "title": "从业资格证号",
        "field": "certNo"
      },
      {
        "title": "所属企业",
        "field": "companyName"
      },
      {
        "title": "责任车辆",
        "field": "plateNo"
      },
      {
        "title": "从业资格证到期日期",
        "field": "certExpire",
        "format": "date"
      }
    ],
    "delete": "/staff/delStaff"
  },
  "form": {
    "title": "新增养护人员&修改养护人员",
    "detail": "/staff/detail/$id",
    "create": "/staff/addStaff",
    "update": "/staff/editStaff",
    "items": [
      {
        "title": "姓名",
        "field": "name",
        "required": true
      },
      {
        "title": "性别",
        "field": "gender",
        "required": true,
        "type": "RadioGroup",
        "options": [
          {
            "label": "男",
            "value": "男"
          },
          {
            "label": "女",
            "value": "女"
          }
        ]
      },
      {
        "title": "人员类型",
        "field": "type",
        "required": true,
        "type": "ApiSelect",
        "api": "/dict/dictDataQueryList?dictTypeId=11",
        "valueField": "code"
      },
      {
        "title": "身份证号",
        "field": "idNo",
        "required": true
      },
      {
        "title": "联系电话",
        "field": "phone",
        "rules": "phone",
        "required": true
      },
      {
        "title": "驾照类型",
        "field": "driveClass",
        "type": "ApiSelect",
        "api": "/dict/dictDataQueryList?dictTypeId=12",
        "valueField": "code"
      },
      {
        "title": "从业资格证号",
        "field": "certNo"
      },
      {
        "title": "所属企业",
        "field": "companyId",
        "type": "ApiSelect",
        "api": "/company/queryList"
      },
      {
        "title": "责任车辆",
        "field": "carId",
        "type": "ApiSelect",
        "api": "/car/queryList",
        "labelField": "plateNo"
      },
      {
        "title": "从业资格证到期日期",
        "field": "certExpire",
        "type": "DatePicker"
      }
    ]
  }
}
