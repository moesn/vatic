{
  "$schema": "../../node_modules/@vatic/smart/schema.json",
  "table": {
    "api": "/staff-list",
    "title": "人员列表",
    "keyField": "id",
    "nameField": "name",
    "export": true,
    "columns": [
      {
        "type": "seq",
        "width": 50
      },
      {
        "title": "姓名",
        "field": "name"
      },
      {
        "title": "性别",
        "field": "gender"
      },
      {
        "title": "人员类型",
        "field": "type",
        "sortable": true
      },
      {
        "title": "所属企业",
        "field": "company"
      },
      {
        "title": "联系电话",
        "field": "phone"
      },
      {
        "title": "责任车辆",
        "field": "carNo"
      },
      {
        "title": "驾车级别",
        "field": "driveClass"
      },
      {
        "title": "从业资格证号",
        "field": "certNo"
      },
      {
        "title": "从业资格证到期时间",
        "field": "certExpire"
      },
      {
        "title": "身份证号",
        "field": "idNo"
      }
    ],
    "search": [
      {
        "title": "关键字",
        "field": "keyword",
        "type": "Input"
      }
    ],
    "create": {
      "url": "/system/role/$id"
    },
    "edit": {
      "url": "/system/role/$id"
    },
    "delete": {
      "url": "/system/role/$id"
    }
  },
  "form": {
    "title": "新增养护人员&修改养护人员",
    "items": [
      {
        "title": "姓名",
        "field": "name"
      },
      {
        "title": "性别",
        "field": "gender"
      },
      {
        "title": "人员类型",
        "field": "type"
      },
      {
        "title": "所属企业",
        "field": "company"
      },
      {
        "title": "联系电话",
        "field": "phone"
      },
      {
        "title": "责任车辆",
        "field": "carNo"
      },
      {
        "title": "驾车级别",
        "field": "driveClass"
      },
      {
        "title": "从业资格证号",
        "field": "certNo"
      },
      {
        "title": "从业资格证到期时间",
        "field": "certExpire"
      },
      {
        "title": "身份证号",
        "field": "idNo"
      }
    ]
  }
}
