{
  "$schema": "../../node_modules/@vatic/smart/schema.json",
  "table": {
    "api": "/system/role/list",
    "title": "任务处理列表",
    "nameField": "name",
    "columns": [
      {
        "type": "seq",
        "width": 50
      },
      {
        "title": "任务名称",
        "field": "name"
      },
      {
        "title": "任务类型",
        "field": "name",
        "sortable": true
      },
      {
        "title": "任务生成时间",
        "field": "createTime"
      },
      {
        "title": "任务结束时间",
        "field": "createTime"
      },
      {
        "title": "任务处理时间",
        "field": "createTime"
      },
      {
        "title": "任务处理结果",
        "field": "name"
      },
      {
        "title": "处理人",
        "field": "name"
      },
      {
        "title": "任务状态",
        "field": "name"
      },
      {
        "title": "任务详情",
        "field": "name"
      }
    ],
    "search": [
      {
        "title": "任务名称",
        "field": "name",
        "type": "Input"
      },
      {
        "title": "任务状态",
        "field": "status",
        "type": "Select",
        "options": [
          {
            "label": "待确认",
            "value": "1"
          },
          {
            "label": "待反馈",
            "value": "2"
          },
          {
            "label": "待复核",
            "value": "3"
          },
          {
            "label": "已完成",
            "value": "4"
          }
        ]
      }
    ]
  },
  "form": {
    "items": [
      {
        "title": "角色名称",
        "field": "name",
        "type": "Input"
      },
      {
        "title": "备注",
        "field": "remark",
        "type": "Input"
      }
    ]
  },
  "operations": [
    {
      "title": "详情"
    },
    {
      "title": "进度"
    },
    {
      "title": "确认",
      "form": {
        "title": "任务确认",
        "items": [
          {
            "title": "任务确认",
            "field": "isMine",
            "type": "RadioGroup",
            "required": true,
            "options": [
              {
                "label": "我的任务",
                "value": "1"
              },
              {
                "label": "不是我的任务",
                "value": "2"
              }
            ]
          },
          {
            "title": "确认说明",
            "field": "remark",
            "type": "Textarea",
            "triggerField": "isMine",
            "triggerValue": "1"
          }
        ]
      }
    },
    {
      "title": "反馈"
    }
  ]
}
