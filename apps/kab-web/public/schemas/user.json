{
  "$schema": "../../node_modules/@vatic/smart/schema.json",
  "table": {
    "api": "/kab/user/pageQueryList",
    "state": "/kab/user/setState",
    "delete": "/kab/user/delUser",
    "disableDelete": "account=admin",
    "disableUpdate": "account=admin",
    "title": "用户列表",
    "keyField": "id",
    "nameField": "username",
    "columns": [
      {
        "type": "seq",
        "width": 50
      },
      {
        "title": "用户名",
        "field": "account"
      },
      {
        "title": "角色",
        "field": "roles.name",
        "type": "List"
      },
      {
        "title": "真实姓名",
        "field": "username"
      },
      {
        "title": "电话号码",
        "field": "phone"
      },
      {
        "title": "身份证",
        "field": "idCardNumber"
      },
      {
        "title": "邮箱",
        "field": "email"
      },
      {
        "title": "备注",
        "field": "remark"
      }
    ],
    "search": [
      {
        "title": "关键字",
        "field": "keyword",
        "type": "Input"
      }
    ]
  },
  "form": {
    "title": "新增用户&修改用户",
    "detail": "/kab/user/detail/$id",
    "create": "/kab/user/addUser",
    "update": "/kab/user/editUser",
    "items": [
      {
        "title": "用户名",
        "field": "account",
        "required": true,
        "disabled": "update"
      },
      {
        "title": "密码",
        "field": "password",
        "required": true,
        "type": "InputPassword",
        "defaultValue": "Ab.12321",
        "disabled": "update"
      },
      {
        "title": "角色",
        "field": "roleIds",
        "required": true,
        "type": "ApiSelect",
        "api": "/kab/role/queryList?enable=true",
        "keyField": "id",
        "props": {
          "mode": "multiple"
        },
        "disabled": "update"
      },
      {
        "title": "真实姓名",
        "field": "username",
        "required": true
      },
      {
        "title": "电话号码",
        "field": "phone",
        "required": true
      },
      {
        "title": "身份证",
        "field": "idCardNumber"
      },
      {
        "title": "邮箱",
        "field": "email"
      },
      {
        "title": "状态",
        "field": "enable",
        "type": "Switch",
        "defaultValue": true,
        "props": {
          "checkedChildren": "启用",
          "unCheckedChildren": "禁用"
        }
      },
      {
        "title": "备注",
        "field": "remark"
      }
    ]
  }
}
