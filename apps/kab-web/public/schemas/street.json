{
  "$schema": "../../node_modules/vatic/schema.json",
  "table": {
    "api": "/region/lazy-list",
    "title": "街道管理",
    "keyField": "id",
    "nameField": "name",
    "export": true,
    "disableUpdate": "level=1|2|3",
    "disableDelete": "level=1|2|3",
    "transformTableData": true,
    "columns": [
      {
        "title": " ",
        "field": "name",
        "align": "left",
        "treeNode": true
      }
    ],
    "search": [
      {
        "title": "关键字",
        "field": "keyword",
        "type": "Input"
      }
    ],
    "delete": "/region/remove"
  },
  "form": {
    "title": "新增下级区域&修改区域",
    "create": "/region/submit",
    "update": "/region/submit",
    "transformData": true,
    "transformBody": true,
    "items": [
      {
        "title": "上级区域",
        "field": "districtCode",
        "required": true,
        "disabled": "update",
        "type": "ApiTreeSelect",
        "api": "/region/lazy-tree",
        "labelField": "title",
        "afterFetch": true
      },
      {
        "title": "名称",
        "field": "name",
        "required": true
      }
    ]
  }
}
