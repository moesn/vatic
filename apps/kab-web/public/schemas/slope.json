{
  "$schema": "../../node_modules/vatic/schema.json",
  "table": {
    "api": "/slope/pageQueryList",
    "title": "边坡",
    "keyField": "id",
    "nameField": "slopeName",
    "export": true,
    "columns": [
      {
        "type": "seq",
        "width": 50
      },
      {
        "title": "边坡名称",
        "field": "slopeName"
      },
      {
        "title": "位置",
        "field": "location"
      },
      {
        "title": "设计使用年限",
        "field": "designLife"
      },
      {
        "title": "边坡类型",
        "field": "slopeType"
      },
      {
        "title": "边坡形态",
        "field": "slopeForm"
      },
      {
        "title": "防护结构类型",
        "field": "protectionType"
      },
      {
        "title": "坡高（米）",
        "field": "height"
      },
      {
        "title": "坡长（米）",
        "field": "gradient"
      },
      {
        "title": "管理单位名称",
        "field": "managementUnit"
      },
      {
        "title": "管理单位联系方式",
        "field": "managementContact"
      },
      {
        "title": "养护单位名称",
        "field": "maintenanceUnit"
      },
      {
        "title": "养护单位联系方式",
        "field": "maintenanceContact"
      },
      {
        "title": "监管单位名称",
        "field": "supervisionUnit"
      },
      {
        "title": "监管单位联系方式",
        "field": "supervisionContact"
      },
      {
        "title": "施工单位名称",
        "field": "constructionUnit"
      },
      {
        "title": "施工单位联系方式",
        "field": "constructionContact"
      }
    ],
    "search": [
      {
        "title": "关键字",
        "field": "keywords",
        "type": "Input"
      }
    ],
    "delete": "/slope/delSlope"
  },
  "form": {
    "title": "新增边坡&修改边坡",
    "detail": "/slope/detail/$id",
    "create": "/slope/addSlope",
    "update": "/slope/editSlope",
    "items": [
      {
        "title": "边坡名称",
        "field": "slopeName",
        "required": true
      },
      {
        "title": "位置",
        "field": "location",
        "required": true,
        "type": "ApiTreeSelect",
        "api": "/region/lazy-tree",
        "labelField": "title",
        "valueField": "title",
        "afterFetch": "device"
      },
      {
        "title": "设计使用年限",
        "field": "designLife",
        "type": "InputNumber"
      },
      {
        "title": "边坡类型",
        "field": "slopeType"
      },
      {
        "title": "边坡形态",
        "field": "slopeForm"
      },
      {
        "title": "防护结构类型",
        "field": "protectionType"
      },
      {
        "title": "坡高（米）",
        "field": "height",
        "type": "InputNumber"
      },
      {
        "title": "坡长（米）",
        "field": "gradient",
        "type": "InputNumber"
      },
      {
        "title": "管理单位名称",
        "field": "managementUnit"
      },
      {
        "title": "管理单位联系方式",
        "field": "managementContact"
      },
      {
        "title": "养护单位名称",
        "field": "maintenanceUnit"
      },
      {
        "title": "养护单位联系方式",
        "field": "maintenanceContact"
      },
      {
        "title": "监管单位名称",
        "field": "supervisionUnit"
      },
      {
        "title": "监管单位联系方式",
        "field": "supervisionContact"
      },
      {
        "title": "施工单位名称",
        "field": "constructionUnit"
      },
      {
        "title": "施工单位联系方式",
        "field": "constructionContact"
      }
    ]
  }
}
